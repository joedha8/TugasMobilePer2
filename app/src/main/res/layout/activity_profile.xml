<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="com.gmail.yudhapratama539.belajarlayout.ProfileActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yudha Pratama Putra"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/myprofile_image"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/btn_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bio"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/bgbutton"/>
    <Button
        android:id="@+id/btn_sekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="sekolah"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/bgbuttonfb"/>
    <Button
        android:id="@+id/btn_organisasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Organisasi"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/bgbuttongoogle"/>

</LinearLayout>
