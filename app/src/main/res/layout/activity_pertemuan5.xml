<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.gmail.yudhapratama539.belajarlayout.Pertemuan5.Pertemuan5Activity">
    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yudha Pratama Putra"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="8dp"/>
    <CheckBox
        android:id="@+id/cb_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text di Bold?"
        android:layout_marginTop="8dp"
        android:onClick="saatCheckBoxDiklik"/>
    <CheckBox
        android:id="@+id/cb_italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text di Italic?"
        android:layout_marginBottom="8dp"
        android:onClick="saatCheckBoxDiklik"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Warna Background?"
        android:textColor="#000000"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:onClick="changeBackground"/>
        <RadioButton
            android:id="@+id/rb_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red"
            android:onClick="changeBackground"/>
        <RadioButton
            android:id="@+id/rb_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green"
            android:onClick="changeBackground"/>
        <RadioButton
            android:id="@+id/rb_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:onClick="changeBackground"/>
    </RadioGroup>

</LinearLayout>
