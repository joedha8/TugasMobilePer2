<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    tools:context="com.gmail.yudhapratama539.belajarlayout.MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:background="@drawable/bgfilter">
        <ImageView
            android:id="@+id/imgprofie"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/profile"/>
        <EditText
            android:id="@+id/edittextemail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgedittext"
            android:hint="Username"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_below="@id/imgprofie"/>
        <EditText
            android:id="@+id/edittextpassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bgedittext"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_below="@id/edittextemail"/>
        <ImageView
            android:id="@+id/captha"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/captcha"
            android:layout_below="@id/edittextpassword"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bgedittext"
            android:layout_below="@id/edittextpassword"
            android:layout_toRightOf="@id/captha"
            android:hint="Captcha"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bgbutton"
            android:text="login"
            android:textSize="17sp"
            android:layout_below="@id/captha"/>
        <TextView
            android:id="@+id/textViewforget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonlogin"
            android:text="Forget Password"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:textSize="15sp"/>
        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:background="#ffffff"
            android:layout_below="@id/buttonlogin"
            android:layout_toRightOf="@id/textViewforget"/>
        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonlogin"
            android:text="Register Account"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_toRightOf="@id/view1"/>
        <View
            android:id="@+id/view2"
            android:layout_width="105dp"
            android:layout_height="1dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="27dp"
            android:background="#ffffff"
            android:layout_below="@id/view1"/>
        <TextView
            android:id="@+id/textViewor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:text="Or"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/view1"
            android:layout_toRightOf="@id/view2"/>
        <View
            android:id="@+id/view3"
            android:layout_width="105dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="27dp"
            android:background="#ffffff"
            android:layout_below="@id/view1"
            android:layout_toRightOf="@id/textViewor"/>
        <Button
            android:id="@+id/buttonloginFb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bgbuttonfb"
            android:text="login with facebook"
            android:textSize="17sp"
            android:layout_below="@id/textViewor"/>
        <Button
            android:id="@+id/buttonlogingoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bgbuttongoogle"
            android:text="login with google+"
            android:textSize="17sp"
            android:layout_below="@id/buttonloginFb"/>

    </RelativeLayout>

</RelativeLayout>
